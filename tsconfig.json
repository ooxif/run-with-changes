{
  "compilerOptions": {
    "charset": "utf8",
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["src/**/*"]
}
